namespace Intrusion.Client
{
	public class BaseConfig
	{
		// Creates a ClassNamesConfig object.
		public constructor {
			_self.BaseRadius = 75;
			_self.BeamToBaseEnemiesMinDistance = 250;
			_self.BeamToBaseGroupMembersMaxDistance = 50;
			_self.MoveBaseRespawnArrowClassName = "Sign_Arrow_Large_Blue_F";
			_self.MoveBaseVehiclesArrowClassName = "Sign_Arrow_Large_F";
			_self.MoveBaseWeaponsArrowClassName = "Sign_Arrow_Large_Green_F";
		};
		
		public property Scalar BaseRadius { get; private set; };
		
		public property Scalar BeamToBaseEnemiesMinDistance { get; private set; };
		
		public property Scalar BeamToBaseGroupMembersMaxDistance { get; private set; };
		
		public property String MoveBaseRespawnArrowClassName { get; private set; };
		
		public property String MoveBaseVehiclesArrowClassName { get; private set; };
		
		public property String MoveBaseWeaponsArrowClassName { get; private set; };
	};
};
